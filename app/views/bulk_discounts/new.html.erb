<h3> Create a new discount for <%= @merchant.name%> </h2>

<%= form_with url: "/merchants/#{@merchant.id}/discounts", method: :post, data: {turbo: false} do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :threshold %>
  <%= f.number_field :threshold %>
  
  <%= f.label :percentage %>
  <%= f.number_field :percentage %>

  <%= f.submit "Create" %>
<% end %>